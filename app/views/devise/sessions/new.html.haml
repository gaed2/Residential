.col-md-6.col-sm-12.col-xs-12.float-left.connect-us
  .float-right.m-width
    %ul.register-field
      %li
        %span
          = t('devise.not_registered')
      %li
        = link_to t('button.sign_up'), new_user_registration_path, class: 'btn btn-outline-primary'
  .main-auth-block
    = render 'devise/shared/navbar'
    .tab-content
      #home.container.tab-pane.active.auditor-field
        %h2.login-f
          = t('button.login')
        .response-message#response_message
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'user_login_form'}) do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, placeholder: t('devise.input.email'), class: 'form-control'
            = image_tag asset_pack_path('packs/images/envelop-icon.png')
          .form-group
            = f.password_field :password, placeholder: t('devise.input.password'), class: 'form-control'
            = image_tag asset_pack_path('packs/images/lock.png')
          .authnbtn-f
            .forgot.float-left
              = link_to t('devise.forgot_password'), new_user_password_path
            %button.btn.btn-primary.float-right{type: "submit"}
              = t('button.login')
      = render 'devise/shared/advertisement'
      = render 'devise/shared/tab_pane'
  = render 'devise/shared/footer'

= javascript_pack_tag 'javascripts/validations/user_login'