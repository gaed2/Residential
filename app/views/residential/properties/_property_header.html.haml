.container-fluid
  .top-bar
    .row
      .col-md-9.col-lg-6.col-xl-6
        .adderss-box
          %span
            = image_tag property.property_sub_category.property_category.icon
          %span
            %h4= property.category_name
            %small= property.full_address
      .col-md-3.col-lg-6.col-xl-6
        .btn-bar
          = link_to t('button.energy_recommendation'), audit_report_path, class: 'width-auto'
          = link_to t('button.retailer_recommendation'), retailers_electricity_suppliers_path(property_id: property.id), class: 'width-auto'
          = link_to t('button.retailer_list'), suggestions_electricity_suppliers_path(property_id: property.id)
          = link_to t('button.generate_report'), generate_reports_path(property_id: property.id, format: :pdf), target: '_blank'
          = link_to t('button.view_ledger'), ledgers_dashboard_path(property_id: property.id)
  .tab-tool-bar
    .row
      .col-sm-12.col-md-8.custom-width
        .report-tabs
          %ul#myTabs.nav.nav-pills.nav-tabs.nav-justified
            %li.property-tab.active{'data-tab' => 'edit_general_details', 'data-url' => property_path(id: property.id)}
              = link_to t('property.steps.general_details'), 'javascript:void(0)'
            %li.property-tab{'data-tab' => 'edit_energy_data'}
              = link_to t('property.steps.energy_data'), 'javascript:void(0)'
            %li.property-tab{'data-tab' => 'edit_energy_save_checklist'}
              = link_to t('property.steps.checklist'), 'javascript:void(0)'
            %li.property-tab{'data-tab' => 'edit_water_energy_chart_graph'}
              = link_to t('property.steps.water_consumption_chart'), 'javascript:void(0)'
            %li.property-tab{'data-tab' => 'edit_average_monthly_consumption'}
              = link_to t('property.steps.average_consumption'), 'javascript:void(0)'
      .col-sm-4
        .text-right.icon-box
          = link_to image_tag(asset_pack_path('packs/images/pencil_icon.png')), edit_property_path(property), class: 'edit-property-icon'
