    %label
      = t('property.label.floor_to_ceiling_height')
    .row
      %div.col-8.padding-right-0
        = form.text_field :floor_cieling_height, placeholder: t('property.input.enter_number'), class: 'form-control before-unit-input'
      %div.col-4.padding-left-0
        = form.select :floor_cieling_unit, Constant::LENGTH_UNIT_ONLY, {}, class: 'form-control unit-select'