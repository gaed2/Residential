      %div.col-8.padding-right-0
        = form.text_field :living_room_size, placeholder: t('property.input.enter_number'), class: 'form-control before-unit-input'
      %div.col-4.padding-left-0
        = form.select :living_room_unit, Constant::LENGTH_UNIT, {}, class: 'form-control unit-select'
  .form-group.col-md-4.col-sm-4.col-xs-12
    %label
      = t('property.label.dining_room_size')
