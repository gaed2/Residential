- @energy_saving_checklists.each_with_index do |checklist, index|
  .form-field-wrapper.row.pt30
    .subheading-field
      %h4
        = "#{Constant::CHECKLIST_SEQUENCE[index]}."
        = checklist.heading
    .energy-managemnets
      %p
        = checklist.question
    .radio-btn.row
      .col-6
        .radio-one
          %input{name: checklist.id, type: "radio", id: "radio_1#{index}", value: 'Yes', class:'checklist_options', 'data-option' => index}/
          %label{for: "radio_1#{index}"}
            Yes
            %span
        .radio-one
          %input{name: checklist.id, type: "radio", id: "radio_2#{index}", value: 'No', class:'checklist_options', 'data-option' => index}/
          %label{for: "radio_2#{index}"}
            No
            %span
        .radio-one
          %input{name: checklist.id, type: "radio", id: "radio_3#{index}", value: 'Other', class:'checklist_options', 'data-option' => index}/
          %label{for: "radio_3#{index}"}
            Other
            %span
      .form-group.col-6.float-left{id: "radio_3#{index}"}
        %input.form-control.display-none{placeholder: t('checklist.enter_answer'), type: "text", class:'other_option_input', 'data-option' => index}/